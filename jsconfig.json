{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@components/*": [
                "src/components/*"
            ],
            "@utils/*": [
                "src/utils/*"
            ],
            "@context/*": [
                "src/context/*"
            ],
            "@pages/*": [
                "src/pages/*"
            ]
        },
        "checkJs": true,
        "jsx": "react-jsx",
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}